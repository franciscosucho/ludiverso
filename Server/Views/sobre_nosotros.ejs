  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const tarjetasJuego = document.querySelectorAll('.tarjeta-juego');
      const puntos = document.querySelectorAll('.punto');
      const btnsAnterior = document.querySelectorAll('.juego-anterior');
      const btnsSiguiente = document.querySelectorAll('.juego-siguiente');
      let indiceActual = 0;

      function mostrarJuego(indice) {
        tarjetasJuego.forEach((tarjeta, i) => {
          tarjeta.classList.toggle('inactiva', i !== indice);
        });
        puntos.forEach((punto, i) => {
          punto.classList.toggle('activo', i === indice);
        });
      }

      btnsAnterior.forEach(btn => {
        btn.addEventListener('click', () => {
          indiceActual = (indiceActual - 1 + tarjetasJuego.length) % tarjetasJuego.length;
          mostrarJuego(indiceActual);
        });
      });

      btnsSiguiente.forEach(btn => {
        btn.addEventListener('click', () => {
          indiceActual = (indiceActual + 1) % tarjetasJuego.length;
          mostrarJuego(indiceActual);
        });
      });

      puntos.forEach(punto => {
        punto.addEventListener('click', (e) => {
          indiceActual = parseInt(e.target.dataset.index);
          mostrarJuego(indiceActual);
        });
      });

      mostrarJuego(indiceActual);
    });
  </script>
